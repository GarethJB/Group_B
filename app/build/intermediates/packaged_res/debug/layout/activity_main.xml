<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">


   <!--메인화면: 자판기 프로그램-->

    <TextView
        android:text="자판기 프로그램"
        android:textSize="15dp"
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/img1"
                android:layout_gravity="center"
                android:layout_width="100dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/item1_price"
            android:text="콜라 800원"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item1_text"
            android:gravity="center"
            android:text="10개 남음"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <Button
             android:id="@+id/item1_btn"
             android:layout_gravity="center"
             android:text="주문하기"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/img2"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/item2_price"
                android:textAlignment="center"
                android:text="콜라 800원"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item2_text"
                android:gravity="center"
                android:text="10개 남음"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/item2_btn"
                android:layout_gravity="center"
                android:text="주문하기"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    <!--자판기화면 기본 layout-->


    </LinearLayout>
    <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:orientation="horizontal">

             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:orientation="vertical">

                 <ImageView
                     android:src="@drawable/img3"
                     android:layout_gravity="center"
                     android:layout_width="100dp"
                     android:layout_height="120dp"/>

                 <TextView
                     android:id="@+id/item3_price"
                     android:textAlignment="center"
                     android:text="콜라 800원"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/item3_text"
                     android:gravity="center"
                     android:text="10개 남음"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

                 <Button
                     android:id="@+id/item3_btn"
                     android:layout_gravity="center"
                     android:text="주문하기"
                     android:layout_width="120dp"
                     android:layout_height="wrap_content"/>


             </LinearLayout>

             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:orientation="vertical">

                 <ImageView

                     android:src="@drawable/img4"
                     android:layout_gravity="center"
                     android:layout_width="100dp"
                     android:layout_height="120dp"/>

                 <TextView
                     android:id="@+id/item4_price"
                     android:textAlignment="center"
                     android:text="콜라 800원"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/item4_text"
                     android:gravity="center"
                     android:text="10개 남음"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

                 <Button
                     android:id="@+id/item4_btn"
                     android:layout_gravity="center"
                     android:text="주문하기"
                     android:layout_width="120dp"
                     android:layout_height="wrap_content"/>


             </LinearLayout>

             <!--자판기화면 기본 layout-->

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

             <EditText
                 android:id="@+id/txt_input"
                 android:hint="금액을 입력하세요"
                 android:layout_weight="2"
                 android:layout_width="0dp"
                 android:layout_gravity="center"
                 android:layout_height="48dp"/>

             <Button
                 android:id="@+id/btn_input"
                 android:text="금액 입력"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 />

         </LinearLayout>

         <TextView
             android:id="@+id/txt_money"
             android:hint="잔액 : "
             android:textSize="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

         <Button
             android:id="@+id/btn_change"
             android:text="잔돈반환"
             android:layout_margin="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>






    </LinearLayout>
    </ScrollView>
</LinearLayout>
